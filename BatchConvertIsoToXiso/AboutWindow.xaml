<Window x:Class="BatchConvertIsoToXiso.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="About Batch Convert ISO to XISO"
        Width="450"
        Height="440"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterOwner">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <StackPanel
            Grid.Row="0"
            Margin="10"
            HorizontalAlignment="Center"
            Orientation="Horizontal">
            <Image
                Width="128"
                Height="128"
                Source="pack://application:,,,/images/logo.png" />
        </StackPanel>

        <StackPanel Grid.Row="1" Margin="20">
            <TextBlock FontWeight="Bold" FontSize="18" Text="Batch Convert ISO to XISO" />
            <TextBlock Text="A utility for batch converting Xbox ISO images to XISO format" Margin="0,5,0,0" />
            <TextBlock Name="AppVersionTextBlock" Margin="0,10,0,0" Text="" />
            <TextBlock Margin="0,20,0,0" Text="Uses extract-xiso for conversions and testing." />
            <TextBlock Margin="0,10,0,0">
                <Hyperlink NavigateUri="https://www.purelogiccode.com" RequestNavigate="Hyperlink_RequestNavigate">https://www.purelogiccode.com</Hyperlink>
            </TextBlock>
            <TextBlock Margin="0,10,0,0" Text="© 2025 Pure Logic Code. All rights reserved." />
        </StackPanel>

        <StackPanel
            Grid.Row="2"
            Margin="10"
            HorizontalAlignment="Center"
            Orientation="Horizontal">
            <Button
                Width="100"
                Margin="10,0,0,0"
                Click="CloseButton_Click"
                Content="Close" />
        </StackPanel>
    </Grid>
</Window>
